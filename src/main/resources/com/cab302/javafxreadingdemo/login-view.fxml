<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<StackPane xmlns:fx="http://javafx.com/fxml"
           fx:controller="com.cab302.javafxreadingdemo.controller.LoginController"
           prefWidth="420" prefHeight="520"
           styleClass="root">
    <children>
        <BorderPane maxWidth="360" maxHeight="420" BorderPane.alignment="CENTER">
            <center>
                <VBox spacing="20" alignment="CENTER" BorderPane.alignment="CENTER" styleClass="login-card">
                    <children>
                        <VBox alignment="CENTER">
                            <Label text="Welcome to Cal-Calc" styleClass="login-title"/>
                            <Label text="Please sign in to continue" styleClass="helper-text"/>
                        </VBox>

                        <VBox alignment="BASELINE_LEFT" spacing="5">
                            <Button fx:id="flashcardButton" text="flashcards" onAction="#test"/>
                        </VBox>

                        <GridPane hgap="12" vgap="12">
                            <columnConstraints>
                                <ColumnConstraints halignment="RIGHT" minWidth="80"/>
                                <ColumnConstraints hgrow="ALWAYS"/>
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints vgrow="NEVER"/>
                                <RowConstraints vgrow="NEVER"/>
                            </rowConstraints>

                            <Label text="Email"/>
                            <TextField fx:id="emailField" promptText="you@example.com" GridPane.columnIndex="1"/>

                            <Label text="Password" GridPane.rowIndex="1"/>
                            <PasswordField fx:id="passwordField" promptText="••••••••" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                        </GridPane>

                        <Button fx:id="signInButton" text="Sign in" onAction="#onSignIn" maxWidth="Infinity" styleClass="primary-btn"/>
                        <Label fx:id="errorLabel" text="" styleClass="error-text"/>
                        <HBox alignment="CENTER" spacing="6">
                            <children>
                                <Label text="Don't have an account?" styleClass="helper-text"/>
                                <Hyperlink text="Sign up" onAction="#onSignUp" styleClass="accent-link"/>
                            </children>
                        </HBox>
                    </children>
                    <padding>
                        <Insets top="28" right="28" bottom="28" left="28"/>
                    </padding>
                </VBox>
            </center>
        </BorderPane>
    </children>
</StackPane>


