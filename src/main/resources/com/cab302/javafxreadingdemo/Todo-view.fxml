<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.control.Button?>
<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.cab302.javafxreadingdemo.controller.Todocontroller">

    <top>
        <VBox spacing="10" alignment="TOP_LEFT" BorderPane.alignment="TOP_LEFT">
            <padding>
                <Insets top="20" right="20" bottom="10" left="20"/>
            </padding>
                <HBox alignment="CENTER">
                    <Label text="To-Do List"
                           style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: white;"/>
                </HBox>

            <HBox alignment="CENTER_LEFT" spacing="12">
                <Button text="Home" onAction="#onBackToHome"/>
                <Label text="Todayâ€™s date:"
                       style="-fx-text-fill: white; -fx-font-size: 14px;"/>
                <Label fx:id="dateLabel"
                       style="-fx-background-color: black; -fx-text-fill: white; -fx-font-size: 16px; -fx-padding: 10px; -fx-border-color: #34495e; -fx-border-width: 1px;"/>
            </HBox>
        </VBox>

    </top>

    <left>

        <VBox fx:id="rootVBox" alignment="CENTER_LEFT" spacing="20.0" xmlns:fx="http://javafx.com/fxml">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>


            <Label text="To-Do Item"
                   style="-fx-background-color: #2b2f36; -fx-text-fill: white; -fx-padding: 6px 10px;
                  -fx-border-color: #34495e; -fx-border-width: 1px;
                  -fx-background-radius: 6; -fx-border-radius: 6;"/>
            <TextField fx:id="inputTextField" promptText="Enter text here..." maxWidth="150" />
            <Button text="Add" onAction="#handleAddText" />
        </VBox>
    </left>
    <right>
        <VBox fx:id="buttonListVBox" alignment="CENTER_RIGHT" spacing="10.0">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>

            <Label text="Complete/Remove Items"
                   style="-fx-background-color: #2b2f36; -fx-text-fill: white; -fx-padding: 6px 10px;
                  -fx-border-color: #34495e; -fx-border-width: 1px;
                  -fx-background-radius: 6; -fx-border-radius: 6;"/>
        </VBox>
    </right>
</BorderPane>


