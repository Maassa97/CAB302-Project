<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<StackPane xmlns="http://javafx.com/javafx"
           xmlns:fx="http://javafx.com/fxml"
           fx:controller="com.cab302.javafxreadingdemo.controller.Flashcards.DeckController"
           prefHeight="420.0" prefWidth="1000.0"
           styleClass="root">

    <children>
        <BorderPane maxWidth="800" maxHeight="700" StackPane.alignment="CENTER">
            <top>
                <VBox alignment="TOP_CENTER">
                    <Label text="Create New Deck" style="-fx-font-size: 42;"/>
                    <Button text="Add New Card" fx:id="newCardButton" onAction="#newCard"/>
                    <Button text="Finish New Card" fx:id="finishCardButton" onAction="#finishCard"/>
                </VBox>
            </top>
            <center>
                <HBox fx:id="containerHBox" alignment="CENTER" spacing="20">
                    <VBox maxWidth="380" maxHeight="450" spacing="80" style="-fx-border-color: white; -fx-border-width: 2;">
                        <GridPane hgap="10" vgap="20">
                            <columnConstraints>
                                <ColumnConstraints halignment="CENTER" minWidth="90"/>
                                <ColumnConstraints hgrow="ALWAYS"/>
                            </columnConstraints>

                            <Label text="Deck Name:" style="-fx-font-size: 20" GridPane.rowIndex="1"/>
                            <TextField fx:id="deckName" promptText="..." GridPane.columnIndex="1" GridPane.rowIndex="1"/>

                        </GridPane>
                    </VBox>
                </HBox>
            </center>
            <bottom>
                <VBox StackPane.alignment="CENTER" alignment="CENTER">
                    <Button text="Back" style="-fx-font-size: 20" prefWidth="70" fx:id="finishDeckButton" onAction="#finishDeck" alignment="CENTER"/>
                </VBox>
            </bottom>
        </BorderPane>
    </children>
</StackPane>
