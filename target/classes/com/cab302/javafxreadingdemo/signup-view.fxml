<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<StackPane xmlns:fx="http://javafx.com/fxml"
           fx:controller="com.cab302.javafxreadingdemo.SignupController"
           prefWidth="420" prefHeight="560"
           styleClass="root">
    <children>
        <BorderPane maxWidth="360" maxHeight="480" BorderPane.alignment="CENTER">
            <center>
                <VBox spacing="20" alignment="CENTER" BorderPane.alignment="CENTER" styleClass="login-card">
                    <children>
                        <VBox alignment="CENTER">
                            <Label text="Create your account" styleClass="login-title"/>
                            <Label text="Just a few details to get started" styleClass="helper-text"/>
                        </VBox>

                        <GridPane hgap="12" vgap="12">
                            <columnConstraints>
                                <ColumnConstraints halignment="RIGHT" minWidth="100"/>
                                <ColumnConstraints hgrow="ALWAYS"/>
                            </columnConstraints>

                            <Label text="Name"/>
                            <TextField fx:id="nameField" promptText="Your full name" GridPane.columnIndex="1"/>

                            <Label text="Email" GridPane.rowIndex="1"/>
                            <TextField fx:id="emailField" promptText="you@example.com" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

                            <Label text="Password" GridPane.rowIndex="2"/>
                            <PasswordField fx:id="passwordField" promptText="••••••••" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

                            <Label text="Confirm" GridPane.rowIndex="3"/>
                            <PasswordField fx:id="confirmField" promptText="Repeat password" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
                        </GridPane>

                        <Button fx:id="createButton" text="Create account" onAction="#onCreateAccount" maxWidth="Infinity" styleClass="primary-btn"/>

                        <HBox alignment="CENTER" spacing="6">
                            <children>
                                <Label text="Already have an account?" styleClass="helper-text"/>
                                <Hyperlink text="Sign in" onAction="#onBackToSignIn" styleClass="accent-link"/>
                            </children>
                        </HBox>

                        <Label fx:id="errorLabel" text="" styleClass="error-text"/>
                    </children>
                    <padding><Insets top="28" right="28" bottom="28" left="28"/></padding>
                </VBox>
            </center>
        </BorderPane>
    </children>
</StackPane>
